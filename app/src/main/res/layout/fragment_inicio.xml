<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="75dp"
    tools:context=".fragment_inicio"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fondo"
        android:alpha="0.5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="1500px"
            android:layout_height="450px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/queen"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/imb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black"
                    android:src="@drawable/edurne"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"

                    app:layout_constraintEnd_toEndOf="@id/imb1"
                    app:layout_constraintEnd_toStartOf="@id/imb1"
                    app:layout_constraintTop_toTopOf="@id/imb1" />

                <ImageButton
                    android:id="@+id/imb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/avici"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="@id/imb2"
                    app:layout_constraintEnd_toStartOf="@id/imb2"
                    app:layout_constraintTop_toTopOf="@id/imb2" />

                <ImageButton
                    android:id="@+id/imb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/harrystyle"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="@id/imb3"
                    app:layout_constraintEnd_toStartOf="@id/imb3"
                    app:layout_constraintTop_toTopOf="@id/imb3" />

                <ImageButton
                    android:id="@+id/imb5"
                    android:layout_width="254dp"
                    android:layout_height="163dp"
                    android:src="@drawable/beckyg"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/imb4"
                    app:layout_constraintEnd_toStartOf="@id/imb4"
                    app:layout_constraintTop_toTopOf="@id/imb4" />

                <ImageButton
                    android:id="@+id/imgb6"
                    android:layout_width="254dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/imb5"
                    app:layout_constraintEnd_toStartOf="@id/imb5"
                    app:layout_constraintTop_toTopOf="@id/imb5"
                    android:src="@drawable/fifth_harmony"
                    tools:layout_editor_absoluteX="160dp" />

                <ImageButton
                    android:id="@+id/imgb7"
                    android:src="@drawable/alltimelow"
                    android:layout_width="254dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/imgb6"
                    app:layout_constraintEnd_toStartOf="@id/imgb6"
                    app:layout_constraintTop_toTopOf="@id/imgb6"
                    />

                <ImageButton
                    android:id="@+id/imgb8"
                    android:src="@drawable/rafael"
                    tools:layout_editor_absoluteX="160dp"
                    android:layout_width="254dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/imgb7"
                    app:layout_constraintEnd_toStartOf="@id/imgb7"
                    app:layout_constraintTop_toTopOf="@id/imgb7"/>

                <ImageButton
                    android:id="@+id/imgb9"
                    android:layout_width="254dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/melendi"
                    app:layout_constraintEnd_toEndOf="@id/imgb8"
                    app:layout_constraintEnd_toStartOf="@id/imgb8"
                    app:layout_constraintTop_toTopOf="@id/imgb8"
                    tools:layout_editor_absoluteX="160dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>








        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="@string/albumes"
            android:textColor="@color/pink"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:layout_width="1500px"
            android:layout_height="450px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/queen1"
                    android:src="@drawable/queen1"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="160dp"/>

                <ImageButton
                    android:id="@+id/alt1"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/atl1"
                    tools:layout_editor_absoluteX="160dp"
                    app:layout_constraintEnd_toEndOf="@id/queen1"
                    app:layout_constraintEnd_toStartOf="@id/queen1"
                    app:layout_constraintTop_toTopOf="@id/queen1"/>

                <ImageButton
                    android:id="@+id/alt2"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/alt1"
                    app:layout_constraintEnd_toStartOf="@id/alt1"
                    app:layout_constraintTop_toTopOf="@id/queen1"
                    tools:layout_editor_absoluteX="160dp"
                    android:src="@drawable/atl2" />

                <ImageButton
                    android:id="@+id/alt3"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/alt2"
                    app:layout_constraintEnd_toStartOf="@id/alt2"
                    app:layout_constraintTop_toTopOf="@id/alt2"
                    tools:layout_editor_absoluteX="160dp"
                    android:src="@drawable/atl3"  />

                <ImageButton
                    android:id="@+id/alt4"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/alt3"
                    app:layout_constraintEnd_toStartOf="@id/alt3"
                    app:layout_constraintTop_toTopOf="@id/alt3"
                    tools:layout_editor_absoluteX="160dp"
                    android:src="@drawable/atl4"  />

                <ImageButton
                    android:id="@+id/avici1"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/alt4"
                    app:layout_constraintEnd_toStartOf="@id/alt4"
                    app:layout_constraintTop_toTopOf="@id/alt4"
                    tools:layout_editor_absoluteX="160dp"
                    android:src="@drawable/avici1" />

                <ImageButton
                    android:id="@+id/avici2"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/avici1"
                    app:layout_constraintEnd_toStartOf="@id/avici1"
                    app:layout_constraintTop_toTopOf="@id/avici1"
                    tools:layout_editor_absoluteX="160dp"
                    android:src="@drawable/avici2" />

                <ImageButton
                    android:id="@+id/avici3"
                    android:layout_width="200dp"
                    android:layout_height="163dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintEnd_toEndOf="@id/avici2"
                    app:layout_constraintEnd_toStartOf="@id/avici2"
                    app:layout_constraintTop_toTopOf="@id/avici2"
                    tools:layout_editor_absoluteX="160dp"
                    android:src="@drawable/avici3" />


            </androidx.constraintlayout.widget.ConstraintLayout>






        </HorizontalScrollView>

        <TextView
            android:id="@id/canciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="604dp"
            android:text="@string/canciones"
            android:textColor="@color/pink"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="@string/artistas"
            android:textColor="@color/pink"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:layout_width="439dp"
            android:layout_height="174dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/canciones"
            app:layout_constraintVertical_bias="0.167">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imB20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/avici"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>