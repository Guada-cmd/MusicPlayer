                    android:scaleType="centerInside"
                    android:src="@drawable/artista_avicii"
                    app:layout_constraintEnd_toEndOf="@id/imb2"
                    app:layout_constraintEnd_toStartOf="@id/imb2"
                    app:layout_constraintTop_toTopOf="@id/imb2" />

                <ImageButton
                    android:id="@+id/imb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/harrystyle"
                    app:layout_constraintEnd_toEndOf="@id/imb3"
                    app:layout_constraintEnd_toStartOf="@id/imb3"
                    app:layout_constraintTop_toTopOf="@id/imb3" />

                <ImageButton
                    android:id="@+id/imb5"
                    android:layout_width="254dp"
                    android:layout_height="163dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/artista_beckyg"
                    app:layout_constraintEnd_toEndOf="@id/imb4"
