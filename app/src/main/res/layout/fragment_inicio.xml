                    tools:layout_editor_absoluteX="160dp" />

                <ImageButton
                    android:id="@+id/imgb7a"
                    android:layout_width="190dp"
                    android:layout_height="163dp"
                    android:layout_marginTop="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/melendi5"
                    app:layout_constraintEnd_toEndOf="@id/imgb6a"
                    app:layout_constraintEnd_toStartOf="@id/imgb6a"
                    app:layout_constraintTop_toTopOf="@id/imgb6a"
                    tools:layout_editor_absoluteX="160dp" />

                <ImageButton
                    android:id="@+id/imgb8a"
                    android:layout_width="190dp"
                    android:layout_height="163dp"
                    android:layout_marginTop="4dp"
                    android:adjustViewBounds="true"
